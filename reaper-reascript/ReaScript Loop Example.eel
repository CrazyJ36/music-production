// Run in reaper actions and terminate by running again.

loopCount = 0;

gfx_init("ReaScript Loop Example");

function run() (
  loopCount += 1;
  gfx_x = 1;
  gfx_printf("Loop Count:%d", loopCount);
  defer("run()");
);

function onExit() (
  gfx_quit();
  ShowConsoleMsg("Exited Successfully!");
);

run();
atexit("onExit();");

