loopCount = 0;
gfx_init("ReaScript Loop Example EEL");

function run() (
  loopCount += 1;
  gfx_x = 1;
  gfx_y = 1;
  gfx_drawstr("Press \'q\' to exit...\n\n");
  gfx_printf("Loop Count:%d", loopCount);

  gfx_getchar() != 'q' ? (
    defer("run();");
  );
);

function onExit() (
  gfx_quit();
  ShowConsoleMsg("Exited Successfully!");
);

run();
atexit("onExit();");

