// wORK IN PROGRESS

loopCount = 0;
gfx_init("ReaScript Loop Example");

function run() (
  loopCount += 1;
  gfx_x = 1;
  gfx_printf("Loop Count:%d", loopCount);

  gfx_getchar() == 0 ? (
     defer("run()");
  );
);

function onExit() (
  gfx_quit();
  ShowConsoleMsg("Exited Successfully!");
);

run();
atexit("onExit();");

